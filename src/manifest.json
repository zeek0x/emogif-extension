{
  "name": "emogif-extension",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "The emogif uploader for slack.",
  "browser_action": {},
  "background": {
    "scripts": [
      "eventType.js",
      "background/slack.js",
      "background/browserAction.js",
      "background/index.js"
    ],
    "persistent": false
  },
  "content_scripts": [{
    "matches": ["https://zeek0x.github.io/emogif/*"],
    "js": [
      "eventType.js",
      "content/slack.js",
      "content/index.js"
    ]
  }],
  "permissions": [
    "https://zeek0x.github.io/emogif/*",
    "https://*.slack.com/*"
  ],
  "icons" : {
    "128": "icon.png"
  }
}
